
    
    
    <Window x:Class="ProjectWPF.MainWindow"
        WindowState="Maximized"
        ResizeMode="NoResize"
        WindowStyle="None"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="489*"/>
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="80,64,0,0" Text="Monday" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Background="LightSeaGreen"/>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="155,65,0,0" Text="Tuesday" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" RenderTransformOrigin="1.562,0.501" Background="LightSeaGreen" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="9,64,0,0" Text="Wednesday" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Background="LightSeaGreen" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="89,64,0,0" Text="Thursday" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" RenderTransformOrigin="3.75,0.501" Background="LightSeaGreen" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="169,64,0,0" Text="Friday" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Background="LightSeaGreen" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="409,64,0,0" Text="Notes" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Background="LightSalmon" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="249,64,0,0" Text="Saturday&#x9;" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Background="LightSeaGreen" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="329,64,0,0" Text="Sunday" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Background="LightSeaGreen" Grid.Column="1" RenderTransformOrigin="1.812,0.501"/>
        <ListBox HorizontalAlignment="Left" Height="200" Margin="80,104,0,0" VerticalAlignment="Top" Width="80" Background="LightSalmon" Name="MondayList" SelectionChanged="MondayList_SelectionChanged"/>
        <ListBox HorizontalAlignment="Left" Height="200" Margin="0,104,0,0" VerticalAlignment="Top" Width="80" Background="LightSalmon" Name="TuesdayList" SelectionChanged="TuesdayList_SelectionChanged" Grid.Column="1"/>
        <ListBox HorizontalAlignment="Left" Height="200" Margin="170,105,0,0" VerticalAlignment="Top" Width="80" Background="LightSalmon" Name="WednesdayList" SelectionChanged="WednesdayList_SelectionChanged" Grid.ColumnSpan="2"/>
        <ListBox HorizontalAlignment="Left" Height="200" Margin="89,104,0,0" VerticalAlignment="Top" Width="80" Background="LightSalmon" Grid.Column="1" Name="ThursdayList" SelectionChanged="ThursdayList_SelectionChanged">

        </ListBox>
        <ListBox HorizontalAlignment="Left" Height="200" Margin="169,104,0,0" VerticalAlignment="Top" Width="80" Background="LightSalmon" Grid.Column="1" x:Name="FridayList" SelectionChanged="FridayList_SelectionChanged"/>
        <ListBox HorizontalAlignment="Left" Height="200" Margin="249,104,0,0" VerticalAlignment="Top" Width="80" Background="LightSalmon" Grid.Column="1" Name="SaturdayList" SelectionChanged="SaturdayList_SelectionChanged"/>
        <ListBox HorizontalAlignment="Left" Height="200" Margin="329,104,0,0" VerticalAlignment="Top" Width="80" Background="LightSalmon" Grid.Column="1" x:Name="SundayList" SelectionChanged="SundayList_SelectionChanged"/>
        <ListBox HorizontalAlignment="Left" Height="200" Margin="409,104,0,0" VerticalAlignment="Top" Width="80" Background="LightSeaGreen" Grid.Column="1"  Name="Notes" SelectionChanged="Notes_SelectionChanged"/>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="49,24,0,0" Text="Weekly Planner" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" FontSize="30" FontFamily="Arial" Grid.Column="1"/>
        <Button Content="Update" HorizontalAlignment="Left" Height="20" Margin="80,384,0,0" VerticalAlignment="Top" Width="80" Click="MondayButton_Click"/>
        <Button Content="Update" HorizontalAlignment="Left" Height="20" Margin="0,384,0,0" VerticalAlignment="Top" Width="80" Click="TuesdayButton_Click" Grid.Column="1"/>
        <Button Content="Update" HorizontalAlignment="Left" Height="20" Margin="9,384,0,0" VerticalAlignment="Top" Width="80" Grid.Column="1" Click="WednesdayButton_Click"/>
        <Button Content="Update" HorizontalAlignment="Left" Height="20" Margin="89,384,0,0" VerticalAlignment="Top" Width="80" Grid.Column="1" Click="ThursdayButton_Click"/>
        <Button Content="Update" HorizontalAlignment="Left" Height="20" Margin="169,384,0,0" VerticalAlignment="Top" Width="80" Grid.Column="1" Click="FridayButton_Click"/>
        <Button Content="Update" HorizontalAlignment="Left" Height="20" Margin="249,384,0,0" VerticalAlignment="Top" Width="80" Grid.Column="1" Click="SaturdayButton_Click"/>
        <Button Content="Update" HorizontalAlignment="Left" Height="20" Margin="328,384,0,0" VerticalAlignment="Top" Width="80" Grid.Column="1" Click="SundayButton_Click"/>
        <Button Content="Update" HorizontalAlignment="Left" Height="20" Margin="409,384,0,0" VerticalAlignment="Top" Width="80" Grid.Column="1" Click="NotesButton_Click"/>
        <TextBox HorizontalAlignment="Left" Height="80" Margin="80,304,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Name="MondayTextBox" TextChanged="TextBox_TextChanged" Background ="LightSeaGreen"/>
        <TextBox HorizontalAlignment="Left" Height="80" Margin="0,304,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" x:Name="TuesdayTextBox" TextChanged="TextBox_TextChanged" Background ="LightSeaGreen" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="80" Margin="9,304,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" x:Name="WednesdayTextBox" TextChanged="TextBox_TextChanged" Background ="LightSeaGreen" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="80" Margin="89,304,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" x:Name="ThursdayTextBox" TextChanged="TextBox_TextChanged" Background ="LightSeaGreen" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="80" Margin="169,304,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" x:Name="FridayTextBox" TextChanged="TextBox_TextChanged" Background ="LightSeaGreen" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="80" Margin="249,304,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" x:Name="SaturdayTextBox" TextChanged="TextBox_TextChanged" Background ="LightSeaGreen" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="80" Margin="329,304,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" x:Name="SundayTextBox" TextChanged="TextBox_TextChanged" Background ="LightSeaGreen" Grid.Column="1"/>
        <ListBox HorizontalAlignment="Left" Height="50" Margin="5,4,0,0" VerticalAlignment="Top" Width="70" x:Name="TextBox1" SelectionChanged="Day_SelectionChanged" />
        <ListBox HorizontalAlignment="Left" Height="145" Margin="5,59,0,0" VerticalAlignment="Top" Width="70" x:Name="TextBox2" SelectionChanged="Activity_SelectionChanged" />
        <ListBox HorizontalAlignment="Left" Height="25" Margin="5,209,0,0" VerticalAlignment="Top" Width="70" x:Name="TextBox3" SelectionChanged="StartTime_SelectionChanged" />
        <ListBox HorizontalAlignment="Left" Height="25" Margin="5,244,0,0" VerticalAlignment="Top" Width="70" x:Name="TextBox4" SelectionChanged="EndTime_SelectionChanged" />
        <Button Content="Button" HorizontalAlignment="Left" Height="25" Margin="10,284,0,0" VerticalAlignment="Top" Width="55" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Left" Height="80" Margin="409,304,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" x:Name="NotesTextBox" TextChanged="TextBox_TextChanged" Background ="LightSalmon" Grid.Column="1"/>


    </Grid>

</Window>
